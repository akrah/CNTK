RootDir = "."

ConfigDir = "$RootDir$"
DataDir = "$RootDir$"
OutputDir = "$RootDir$/Output"
ModelDir = "$OutputDir$/Models"

ndlMacros="$ConfigDir$/Macros.ndl"

precision="float"
deviceId="auto"
prefetch="true"
parallelTrain="false"

command=Test:Cross

stderr="$OutputDir$/AutoMarkov_ResNet_56"
traceLevel=1
numMBsToShowResult=200

Proj16to32Filename = "$ConfigDir$/16to32.txt"
Proj32to64Filename = "$ConfigDir$/32to64.txt"

Train=[
    action="train"
    modelPath="$ModelDir$/AutoMarkov_ResNet_56"

     NDLNetworkBuilder=[
        networkDescription="$ConfigDir$/AutoMarkov_ResNet_56.ndl"
    ]
    
    SGD=[
        epochSize=0
        minibatchSize=128
        # Note that learning rates are 10x more than in the paper due to a different
        # momentum update rule in CNTK: v{t + 1} = lr*(1 - momentum)*g{t + 1} + momentum*v{t}
        learningRatesPerMB=0.1*1:1.0*80:0.1*40:0.01
        momentumPerMB=0.9
        maxEpochs=160
        L2RegWeight=0.0001
        dropoutRate=0
        
        ParallelTrain=[
            parallelizationMethod="DataParallelSGD"
            distributedMBReading="true"
            parallelizationStartEpoch=1
            DataParallelSGD=[
                gradientBits=32
            ]
        ]
    ]
    
    reader=[
        readerType="ImageReader"
        file="$DataDir$/train_map.txt"
        randomize="auto"
        features=[
            width=32
            height=32
            channels=3
            cropType="random"
            cropRatio=0.8
            jitterType="uniRatio"
            interpolations="linear"
            meanFile="$ConfigDir$/CIFAR-10_mean.xml"
        ]
        labels=[
            labelDim=10
        ]
    ]    
]

Cross = [
    action = "cv"
    crossValidationInterval=0:1:160
    sleepTimeBetweenRuns=0
    modelPath="$ModelDir$/AutoMarkov_ResNet_56"
	minibatchSize=128
	
	reader=[
        readerType="ImageReader"
        file="$DataDir$/test_map.txt"
        randomize="none"
        features=[
            width=32
            height=32
            channels=3
            cropType="center"
            cropRatio=1
            jitterType="uniRatio"
            interpolations="linear"
            meanFile="$ConfigDir$/CIFAR-10_mean.xml"
        ]
        labels=[
            labelDim=10
        ]
		]
]

DumpNode = [
    action = "dumpnode"
	nodeName = "rn3_3.c"
    modelPath = "$OutputDir$/Models/AutoMarkov_ResNet_56.Eval"
	outputFile = "$OutputDir$/dump"
]

TopoPlot = [
    action = "plot"
    modelPath = "$OutputDir$/Models/AutoMarkov_ResNet_56.0"
    outputdotFile = "$OutputDir$/AutoMarkov_ResNet_56.dot" 
    outputFile="$OutputDir$/AutoMarkov_ResNet_56.jpg" 
    renderCmd="C:\Users\ctoca\Downloads\graphviz-2.38\release\bin\dot.exe -Tpng -Gdpi=300 $OutputDir$/AutoMarkov_ResNet_56.dot -o $OutputDir$/AutoMarkov_ResNet_56.png"
]

AddBNEval=[    
    action="edit"
    CurModel="$ModelDir$/AutoMarkov_ResNet_56"
    NewModel="$ModelDir$/AutoMarkov_ResNet_56.Eval"
    editPath="$ConfigDir$/03_ResNet.mel"
]

Test=[
    action="test"
    modelPath="$ModelDir$/AutoMarkov_ResNet_56.Eval"
    # Set minibatch size for testing.
    minibatchSize=128

    reader=[
        readerType="ImageReader"
        file="$DataDir$/test_map.txt"
        randomize="none"
        features=[
            width=32
            height=32
            channels=3
            cropType="center"
            cropRatio=1
            jitterType="uniRatio"
            interpolations="linear"
            meanFile="$ConfigDir$/CIFAR-10_mean.xml"
        ]
        labels=[
            labelDim=10
        ]
    ]    
]
